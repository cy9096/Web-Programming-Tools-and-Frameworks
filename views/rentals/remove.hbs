<div class="container-signup">
    <div class="border border-dark p-4 border-opacity-75">
        <div class="row">
            <div class="sign-up-title">
                <h1>Rental List</h1>
                <p>Remove your property here</p>
            </div>
            <form method="post" action="/rentals/remove" class="removeItem" enctype="multipart/form-data">
                <label for="headline" class="form-label"></label>
                <input type="text" class="form-control" id="headline" name="headline" value="{{rental.headline}}"
                    placeholder="headline">

                {{#if rentalValidation.headline}}
                <span style="color: red;">{{errors.headline}}</span>
                {{/if}}

                <label for="numSleeps" class="form-label"></label>
                <input type="number”" class="form-control" id="numSleeps" name="numSleeps" value="{{rental.numSleeps}}"
                    placeholder="numSleeps">

                {{#if rentalValidation.numSleeps}}
                <span style="color: red;">{{errors.numSleeps}}</span>
                {{/if}}

                <label for="numBedrooms" class="form-label"></label>
                <input type="number”" class="form-control" id="numBedrooms" name="numBedrooms"
                    value="{{rental.numBedrooms}}" placeholder="numBedrooms">

                {{#if rentalValidation.numBedrooms}}
                <span style="color: red;">{{errors.numBedrooms}}</span>
                {{/if}}

                <label for="numBathrooms" class="form-label"></label>
                <input type="number”" class="form-control" id="numBathrooms" name="numBathrooms"
                    value="{{rental.numBathrooms}}" placeholder="numBathrooms">

                {{#if rentalValidation.numBathrooms}}
                <span style="color: red;">{{errors.numBathrooms}}</span>
                {{/if}}

                <label for="pricePerNight" class="form-label"></label>
                <input type="number”" class="form-control" id="pricePerNight" name="pricePerNight"
                    value="{{rental.pricePerNight}}" placeholder="pricePerNight">

                {{#if rentalValidation.pricePerNight}}
                <span style="color: red;">{{errors.pricePerNight}}</span>
                {{/if}}

                <label for="city" class="form-label"></label>
                <input type="text" class="form-control" id="city" name="city" value="{{rental.city}}"
                    placeholder="city">

                {{#if rentalValidation.city}}
                <span style="color: red;">{{errors.city}}</span>
                {{/if}}

                <label for="province" class="form-label"></label>
                <input type="text" class="form-control" id="province" name="province" value="{{rental.province}}"
                    placeholder="province">

                {{#if rentalValidation.province}}
                <span style="color: red;">{{errors.province}}</span>
                {{/if}}

                <div class="input-group">
                    <input type="file" class="form-control" id="imageUrl" aria-describedby="imageUrl"
                        aria-label="Upload" value="{{rental.imageUrl}}">
                    <button class="btn btn-outline-secondary" type="button" id="imageUrlBtn">Upload Img</button>
                </div>

                {{#if rentalValidation.imageUrl}}
                <span style="color: red;">{{errors.imageUrl}}</span>
                {{/if}}

                <div class="form-check">

                    <input class="featuredRental" type="checkbox" value="{{rental.featuredRental}}" id="featuredRental"
                        checked>
                    <label for="featuredRental" class="form-label">Featured Rental</label>
                </div>

                {{#if rentalValidation.featuredRental}}
                <span style="color: red;">{{errors.featuredRental}}</span>
                {{/if}}

                <input type="submit" value="Remove">
            </form>
        </div>
    </div>
</div>